---
import Card from "../components/Card.astro";
---

<div class="gallery">
    <div class="gallery-title">Gallery</div>
    <div class="gallery-images">
        <Card title="Gallery Image 1" image="https://hexe-irin.com/art1.webp" medium="Watercolor" dimensions="10x10" year="2025" />
        <Card title="Gallery Image 2" image="https://hexe-irin.com/art2.webp" medium="Watercolor" dimensions="10x10" year="2025" />
        <Card title="Gallery Image 3" image="https://hexe-irin.com/art3.webp" medium="Watercolor" dimensions="10x10" year="2025" />
        <Card title="Gallery Image 4" image="https://hexe-irin.com/art4.webp" medium="Watercolor" dimensions="10x10" year="2025" />
        <Card title="Gallery Image 5" image="https://hexe-irin.com/art5.webp" medium="Watercolor" dimensions="10x10" year="2025" />
    </div>
</div>

<style>
    .gallery {
        max-width: 900px;
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--sp);
        padding: var(--sp-2);
    }

    .gallery-title {
        font-weight: 600;
        font-size: var(--sp-2);
        letter-spacing: 1px;
        color: var(--color-text);
        text-align: center;
        margin: 0;
    }

    .gallery-images {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--sp-2);
        padding: var(--sp-2);
    }
</style>