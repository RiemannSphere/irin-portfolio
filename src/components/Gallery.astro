---
import Card from "../components/Card.astro";

// Define the gallery data
const galleryItems = [
    { title: "Golden Cat", image: "https://r2.hexe-irin.com/Irin_Golden_Cat_A5_40.small.webp", medium: "Acrylics on paper", dimensions: "A5", year: "2022" },
    { title: "Psychedelic Pigeon", image: "https://r2.hexe-irin.com/Irin_Psychedelic_Pigeon_10x15_30.small.webp", medium: "Acrylic markers on wood board", dimensions: "10x15 cm", year: "2023" },
    { title: "Chic Cat", image: "https://r2.hexe-irin.com/Irin_Chic_Cat_10x15_30.small.webp", medium: "Acrylics and acrylic markers on canvas board", dimensions: "10x15 cm", year: "2022" },
    { title: "Baby Phoenix", image: "https://r2.hexe-irin.com/Irin_Baby_Phoenix_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" },
    { title: "Jelly Fish", image: "https://r2.hexe-irin.com/Irin_Jelly_Fish_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" },
    { title: "Scarab", image: "https://r2.hexe-irin.com/Irin_Scarab_8x10_15.small.webp", medium: "Acrylic markers on canvas board", dimensions: "8x10 cm", year: "2022" },
    { title: "Rooster", image: "https://r2.hexe-irin.com/Irin_Rooster_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" },
    { title: "Pumpkins", image: "https://r2.hexe-irin.com/Irin_Pumpkins_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" },
    { title: "City Pigeon", image: "https://r2.hexe-irin.com/Irin_City_Pigeon_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" },
    { title: "Koi", image: "https://r2.hexe-irin.com/Irin_Koi_10x10_25.small.webp", medium: "Acrylic markers on canvas board", dimensions: "10x10 cm", year: "2022" }
];
---

<div class="gallery" id="gallery">
    <div class="gallery-title">Gallery</div>
    
    <!-- Loading spinner -->
    <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner"></div>
        <p>Loading gallery...</p>
    </div>
    
    <!-- Gallery content (hidden initially) -->
    <div class="gallery-images" id="galleryImages" style="display: none;">
        {galleryItems.map(item => (
            <Card 
                title={item.title} 
                image={item.image} 
                medium={item.medium} 
                dimensions={item.dimensions} 
                year={item.year} 
            />
        ))}
    </div>
</div>

<script define:vars={{ galleryItems }}>
    // Preload all images and show gallery when ready
    function preloadImages() {
        // Extract image URLs from gallery items
        const imageUrls = galleryItems.map(item => item.image);

        const loadingSpinner = document.getElementById('loadingSpinner');
        const galleryImages = document.getElementById('galleryImages');
        
        let loadedCount = 0;
        const totalImages = imageUrls.length;

        function onImageLoad() {
            loadedCount++;
            if (loadedCount === totalImages) {
                // All images loaded, show gallery
                if (loadingSpinner) loadingSpinner.style.display = 'none';
                if (galleryImages) galleryImages.style.display = 'grid';
            }
        }

        function onImageError() {
            loadedCount++;
            if (loadedCount === totalImages) {
                // All images processed (even if some failed), show gallery
                if (loadingSpinner) loadingSpinner.style.display = 'none';
                if (galleryImages) galleryImages.style.display = 'grid';
            }
        }

        // Preload each image
        imageUrls.forEach(url => {
            const img = new Image();
            img.onload = onImageLoad;
            img.onerror = onImageError;
            img.src = url;
        });
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', preloadImages);
    } else {
        preloadImages();
    }
</script>

<style>
    .gallery {
        max-width: 950px;
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--sp);
        padding: var(--sp-2);
    }

    .gallery-title {
        font-weight: 600;
        font-size: var(--sp-2);
        letter-spacing: 1px;
        color: var(--color-text);
        text-align: center;
        margin: 0;
    }

    .gallery-images {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--sp-2);
        padding: var(--sp-2);
        width: 100%;
    }

    .loading-spinner {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: var(--sp-4);
        gap: var(--sp);
    }

    .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid var(--color-muted);
        border-top: 4px solid var(--color-text);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-spinner p {
        color: var(--color-text);
        margin: 0;
        font-size: var(--sp);
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>