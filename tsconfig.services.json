{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/services",
    "rootDir": "./src/services",
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "noEmitOnError": true
  },
  "include": ["src/services/**/*"],
  "exclude": ["node_modules", "dist"]
} 